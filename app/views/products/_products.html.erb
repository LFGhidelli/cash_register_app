<div class="col-md-8 mt-5">
  <ul class="list-group">
    <% @products.each do |product| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= product.name %></strong> - <%= number_to_currency(product.price) %>
        </div>
        <div>
          <%= form_with url: cart_path(session[:cart_id]), method: :patch, class: "d-inline-block" do |f| %>
            <%= hidden_field_tag :product_id, product.id %>
            <%= number_field_tag :quantity, 1, min: 1, step: 1, class: "form-control w-25 mx-2 form-control d-inline-block w-25 mx-2", oninput: "this.value = Math.max(0, this.value)" %>
            <%= submit_tag "Add to Cart", class: "btn btn-primary btn-sm" %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
